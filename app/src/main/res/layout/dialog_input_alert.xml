<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="295dp"
  android:layout_height="wrap_content"
  android:layout_gravity="center"
  android:background="@drawable/white_round_shape_bg"
  android:orientation="vertical">

  <TextView
    android:id="@+id/alert_title"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:text="请输入讨论组名"
    android:textColor="@color/enterprise_act__text"
    android:textSize="@dimen/text_size_18" />
  <View
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:background="@color/devider_color_gray_for_alert" />

  <EditText
    android:id="@+id/alert_content"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:text=""
    android:hint="请输入名称..."
    android:textColor="@color/main_text_color"
    android:textSize="@dimen/text_size_16" />

  <View
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:background="@color/devider_color_gray_for_alert" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/alert_cancle"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:textColor="@color/enterprise_act__text"
      android:gravity="center"
      android:background="@drawable/selector_dialog_left_button"
      android:textSize="@dimen/text_size_16"
      android:text="取消" />

    <View
      android:id="@+id/alert_space"
      android:layout_width="1px"
      android:layout_height="match_parent"
      android:background="@color/devider_color_gray_for_alert"/>

    <TextView
      android:id="@+id/alert_ok"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:textColor="@color/enterprise_act__text"
      android:textSize="@dimen/text_size_16"
      android:background="@drawable/selector_dialog_right_button"
      android:gravity="center"
      android:text="确定" />

  </LinearLayout>

</LinearLayout>
